{
  "semi": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "singleQuote": true,
  "jsxSingleQuote": false,
  "bracketSpacing": true,

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react(.*)$",
    "^next(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/page-components/(.*)$",
    "^@/components/(.*)$",
    "^@/hooks/(.*)$",
    "^@/stores/(.*)$",
    "^@/constants/(.*)$",
    "^@/@types/(.*)$",
    "^@/assets/(.*)$",
    "^[./]"
  ],
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true
}
